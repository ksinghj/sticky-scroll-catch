body {
  font-family: sans-serif;
}

.padding {
  padding: 50px 75px;
}

.border {
  border: 2px solid;
}

.flex {
  display: flex;
  flex-direction: row;
  padding: 0;
}

.sticky {
  position: sticky;
  top: 0;
}

/* fix for sticky in flex */
.sticky-flex-fix {
  align-self: flex-start;
}

.left {
  padding-bottom: 700px;
  background: red;
}
.center {
  padding-bottom: 12000px;
  background: blue;
}
.right {
  padding-bottom: 800px;
  background: yellow;
}
