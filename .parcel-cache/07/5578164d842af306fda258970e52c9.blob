body {
  font-family: sans-serif;
}

.padding {
  padding: 50px 75px;
}

.border {
  border: 2px solid;
}

.flex {
  display: flex;
  flex-direction: row;
  padding: 0;
}

/* fix for sticky in flex */
.sticky-flex-fix {
  align-self: flex-start;
}

.left {
  padding-bottom: 700px;
  background: red;
}
.center {
  padding-bottom: 1200px;
  background: blue;
}
.right {
  padding-bottom: 900px;
  background: yellow;
  border-bottom-color: aqua; /* to see bottom clearer */
}

.container {
  position: relative;
}

/* TODO: remove 'right' values as they are only for this sandbox env */

/* target scrolled to bottom */
.sticky-scroll-catch--scrolled {
  right: 8.3%;
  position: fixed;
  bottom: 0;
}

.sticky-scroll-catch--break {
  right: 7.5%;
  position: absolute;
  bottom: 0;
}

.sticky-scroll-catch--upscroll {
  right: 7.5%;
  position: absolute;
}

.sticky-scroll-catch--scrolled-top {
  position: fixed;
  top: 0;
  right: 8.3%;
}
